<Window x:Class="Tourplaner_Frontend.TouradderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tourplaner_Frontend"
        x:Name="ReferenceToWindow"
        mc:Ignorable="d"
        Title="TouraddingForm" Height="210" Width="374">
    <Window.DataContext>
        <local:AddTourViewModel/>
    </Window.DataContext>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>

        </Grid.RowDefinitions>
        <Label >Add Tour</Label>
        <Label Grid.Column="0" Grid.Row="1">Tour Name</Label>
        <Label Grid.Row="3" Grid.Column="0">Source</Label>
        <Label Grid.Row="2" Grid.Column="0"  >Destination</Label>
        <TextBox  Grid.Row="1" Grid.Column="1" Text="{Binding Tourname,  UpdateSourceTrigger=PropertyChanged}" Name="TName" ></TextBox>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Source, UpdateSourceTrigger=PropertyChanged}"  Name="Source"></TextBox>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Destination , UpdateSourceTrigger=PropertyChanged}"  Name="Dest"></TextBox>
        <Button  Grid.Row="4" Grid.Column="1" Command="{Binding Submittour}" CommandParameter="{Binding ElementName=ReferenceToWindow}" > Submit</Button>
    </Grid>
</Window>
